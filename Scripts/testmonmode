#     set_monitors 1080x1920+0+120 3840x2160+1080+0 1920x1080+4920+540 , \
#     rename_monitor 0 sidel , rename_monitor 1 main , rename_monitor 2 sider , \
     merge_tag right main , merge_tag left main , merge_tag bottom main , \     
     spawn monmode 3  
elif [ $(cat /home/pawelkuzia/Scripts/monmodecheck) -eq 3 ]
then
hc keybind Mod1-Control-Shift-1 \
     chain , \
     add left , add right , \
     move_monitor main 1920x2110+2040+44 , add_monitor 948x2110+1086+44 left left , add_monitor 948x2110+3966+44 right right , \
